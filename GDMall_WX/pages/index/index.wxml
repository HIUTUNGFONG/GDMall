<image src='cloud://grotesquery-e9db0d.6772-grotesquery-e9db0d/index/top_logo.png' class='top_logo'>首页顶部图片</image>

<swiper class='index_swiper' autoplay='true' circular='true' indicator-dots='true'>
  <swiper-item wx:for='{{ics}}' wx:key='{{index}}'>
    <image src='{{item.image}}' class='index_swiper' bindtap='onProduct'>轮播图</image>
  </swiper-item>
</swiper>

<image src='cloud://grotesquery-e9db0d.6772-grotesquery-e9db0d/index/title_img.png' class='top_logo'>首页无连接图片</image>


<block wx:if="{{ivobs.show_type==1}}">
  <video src='{{ivobs.video}}' custom-cache='true' class='index_video'>视频</video>
</block>
<block wx:else>
  <image src='{{ivobs.image}}' class='index_img2'>图片</image>
</block>

<image src='/temp/index_clothing.png' class='index_img1'>服装</image>

<view class='man_woman'>
  <image src='{{mwImageUrl}}' class='man_woman'>男装女装</image>
  <view class='mw_1' bindtap='on_mw_1'></view>
  <view class='mw_2' bindtap='onWomen'></view>
</view>

